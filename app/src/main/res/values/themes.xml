<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LinkageLab" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Customize your theme here. -->
    <item name="materialButtonStyle">@style/CustomButtonStyle</item>

    </style>

    <!-- 버튼에 커스텀 스타일 적용 -->
    <style name="CustomButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@drawable/button_background_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 타이포그래피 커스텀 -->
    <style name="CommonTextViewStyle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/kakao_red</item>
    </style>


    <style name="NoticeTextViewStyle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/kakao_red</item>
    </style>


    <style name="BottomNavigationActiveTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="BottomNavigationInactiveTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/kakao_gray</item>
    </style>

    <style name="Theme.LinkageLab.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LinkageLab.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LinkageLab.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>