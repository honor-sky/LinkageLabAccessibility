<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/text_bottom_sheet_layout_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/restaurantInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="78dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    <LinearLayout
        android:id="@+id/veganTypeIcon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@drawable/box_bread_all"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">

   <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="칙피스"/>

    <TextView
        android:id="@+id/typeTextView_step1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:text="카페, 모든 메뉴가 비건"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/locTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="15sp"
        android:text="성동구 성수대로 어쩌구길"
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/restaurantInfo"/>

    </LinearLayout>

</LinearLayout>

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:paddingStart="16dp"
           android:paddingTop="20dp"
           android:paddingEnd="16dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="가게 정보"
               android:textSize="20dp" />

           <TextView
               android:id="@+id/info_updatedDate"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="end"
               android:textSize="13sp"
               android:textColor="@color/kakao_gray"
               android:text="업데이트 20204.05.05" />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:paddingStart="16dp"
           android:paddingTop="20dp"
           android:paddingEnd="16dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:paddingTop="10dp"
               android:paddingBottom="10dp">

               <ImageView
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:background="@drawable/ic_home"
                   android:importantForAccessibility="no"/>

               <TextView
                   android:id="@+id/addressTextView"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="10dp"
                   android:text="가게정보1"
                   android:textSize="16dp" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:paddingTop="10dp"
               android:paddingBottom="10dp">

               <ImageView
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:background="@drawable/ic_home"
                   android:importantForAccessibility="no"/>

               <TextView
                   android:id="@+id/phoneTextView"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="10dp"
                   android:text="가게정보2"
                   android:textSize="16dp" />
           </LinearLayout>

       </LinearLayout>
    </LinearLayout>
</LinearLayout>