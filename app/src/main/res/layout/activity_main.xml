<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MainActivity"
    android:padding="10dp"
    android:theme="@style/Theme.LinkageLab">


    <Button
        android:id = "@+id/testBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/base_roundsquare"
        android:contentDescription="테스트"
        android:text="테스트"
        android:textColor="@color/kakao_black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id = "@+id/testBtn2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/base_roundsquare"
        android:contentDescription="테스트2"
        android:text="테스트2"
        android:textColor="@color/kakao_black"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>