<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MainActivity"
    android:theme="@style/Theme.LinkageLab">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/kakao_yellow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="기본 컴포넌트 테스트"
            android:textSize="20sp"
            android:accessibilityHeading="true"/>

    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/editTextTestBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="EditTextView"
                android:textColor="@color/kakao_black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/searchViewTestBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="SearchView"
                android:textColor="@color/kakao_black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonTextBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Button / ImageButton / Toggle / FAB / RadioButton / Switch / Chip / CheckBox / Slider"
                android:textColor="@color/kakao_black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/pickerTestBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Date Picker / Time Picker / Calendar / Tab "
                android:textColor="@color/kakao_black"
                android:textSize="20sp" />


            <Button
                android:id="@+id/viewPagerTestBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="ViewPager"
                android:textColor="@color/kakao_black"
                android:textSize="20sp" />


            <Button
                android:id="@+id/bottomSheetTestBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="BottomSheet"
                android:textColor="@color/kakao_black"
                android:textSize="20sp" />


            <Button
                android:id="@+id/customBottomSheetTestBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="CustomBottomSheet"
                android:textColor="@color/kakao_black"
                android:textSize="20sp" />


            <Button
            android:id="@+id/drawerTestBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Navigation Drawer"
            android:textColor="@color/kakao_black"
            android:textSize="20sp" />

            <Button
                android:id="@+id/csstomDrawerTestBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Custom Navigation Drawer"
                android:textColor="@color/kakao_black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/ToastTestBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="ProgressBar / RatingBar / SnackBar / AlertDialog"
                android:textColor="@color/kakao_black"
                android:textSize="20sp" />


            <Button
                android:id="@+id/scrollTestBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="ScrollView / ListView"
                android:textColor="@color/kakao_black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/MenuTestBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Menu"
                android:textColor="@color/kakao_black"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>