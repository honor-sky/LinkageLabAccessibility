<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MainActivity"
    android:theme="@style/Theme.LinkageLab">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/kakao_yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:title="기본 컴포넌트 테스트" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBar">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <Button
               android:id = "@+id/editTextTestBtn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:text="EditTextView / SearchView"
               android:textColor="@color/kakao_black"
               android:textSize="20sp" />

    <Button
        android:id = "@+id/buttonTextBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Button / ImageButton / Toggle / FAB / RadioButton / Switch / Chip / CheckBox / Slider"
        android:textColor="@color/kakao_black"
        android:textSize="20sp" />

    <Button
        android:id = "@+id/pickerTestBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Date Picker / Time Picker / Calendar / Tab / ViewPager"
        android:textColor="@color/kakao_black"
        android:textSize="20sp" />


        <Button
            android:id = "@+id/bottomSheetTestBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="BottomSheet"
            android:textColor="@color/kakao_black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn5" />


           <Button
               android:id = "@+id/sideSheetTestBtn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:text="Navigation Drawer"
               android:textColor="@color/kakao_black"
               android:textSize="20sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/btn5" />

        <Button
               android:id = "@+id/ToastTestBtn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:textColor="@color/kakao_black"
               android:textSize="20sp"
               android:text="ProgressBar / RatingBar / SnackBar / AlertDialog" />


           <Button
               android:id = "@+id/scrollTestBtn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:text="ScrollView / ListView"
               android:textColor="@color/kakao_black"
               android:textSize="20sp" />

           <Button
               android:id = "@+id/MenuTestBtn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:text="Menu"
               android:textColor="@color/kakao_black"
               android:textSize="20sp" />

       </LinearLayout>
   </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>