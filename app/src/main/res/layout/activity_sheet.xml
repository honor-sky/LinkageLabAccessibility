<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="false">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/backBtn"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:contentDescription="뒤로가기 버튼"
            android:background="@drawable/ic_arrow_back"
            android:orientation="horizontal" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:padding="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/expandBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="바텀시트 나타남"
            android:contentDescription="바텀시트 나타남"
            android:textColor="@color/kakao_black"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/shrinkBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="바텀시트 숨김"
            android:contentDescription="바텀시트 숨김"
            android:textColor="@color/kakao_black"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- 기본 확장 상태에서 안 보이는 부분에 대해 읽어주지를 않음 -->
    <LinearLayout
        android:id="@+id/bottom_sheet_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:orientation="vertical"
        android:background="@drawable/base_top_roundsquare_white_20"
        android:clickable="false"
        app:behavior_hideable="true"
        app:behavior_draggable="true"
        app:behavior_peekHeight="160dp"
        app:behavior_halfExpandedRatio="0.75"
        app:layout_insetEdge="bottom"
        android:contentDescription="두 손가락으로 위아래로 스와이프 하면 화면을 확장 및 축소 할 수 있습니다">

        <LinearLayout
            android:id="@+id/restaurantInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="78dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/veganTypeIcon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:background="@drawable/box_bread_all"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="칙피스"/>

                <TextView
                    android:id="@+id/typeTextView_step1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="카페, 모든 메뉴가 비건"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/locTxtView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="15sp"
                    android:text="성동구 성수대로 어쩌구길"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/restaurantInfo"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingTop="20dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가게 정보"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/info_updatedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textSize="13sp"
                    android:textColor="@color/kakao_gray"
                    android:text="업데이트 2024.05.05" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="20dp"
                android:paddingEnd="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_home"
                        android:importantForAccessibility="no"/>

                    <TextView
                        android:id="@+id/addressTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="가게정보1"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_home"
                        android:importantForAccessibility="no"/>

                    <TextView
                        android:id="@+id/phoneTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="가게정보2"
                        android:textSize="16dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
       <!-- <include
            android:id="@+id/bottom_sheet"
            layout="@layout/bottom_sheet"/>-->
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>